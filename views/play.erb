<head>
  <link rel="stylesheet" type="text/css" href="<%= url('./stylesheets/play.css') %>"/>
</head>
<body>

Welcome <%= @game.player.name %>
<br/>
<h2><%= @game.player.name %> vs Computer</h2>

<% if @game.player.move.nil? %>
  <div id="form_box">
    <form action='/action' method='post' name="action_form">
      <select name="player_choice" id="player_choice">
        <option value="0">Select Move:</option>
        <option value="Rock">Rock</option>
        <option value="Paper">Paper</option>
        <option value="Scissors">Scissors</option>
      </select>
      <input type='submit' value='submit' id='submit'>
    </form>
  </div>
<% else %>
  <%= @result.capitalize %>
<% end %>

</body>
